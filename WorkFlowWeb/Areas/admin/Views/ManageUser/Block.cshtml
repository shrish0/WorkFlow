@model ApplicationUser

<div class="row w-100 justify-content-center px-0 my-auto">
    <div class="card shadow mb-5 border-0 px-0 col-lg-8 col-sm-12">
        <div class="card-header bg-secondary bg-gradient text-white">
            <h2>
                Block User 
             </h2>
        </div>
        <div class="card-body">
            <h4>Are you sure you want to delete this user?</h4>
            <dl class="row">
                <dt class="col-sm-2">
                    First Name
                </dt>
                <dd class="col-sm-10">
                    @Model.FirstName
                </dd>
                <dt class="col-sm-2">
                    Last Name
                </dt>
                <dd class="col-sm-10">
                    @Model.LastName
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Model.Email
                </dd>
                <dt class="col-sm-2">
                    Address
                </dt>
                <dd class="col-sm-10">
                    @Model.Address
                </dd>
                <dt class="col-sm-2">
                    Phone Number
                </dt>
                <dd class="col-sm-10">
                    @Model.PhoneNumber
                </dd>
            </dl>

            <div class="row">
                <div class="col-md-6">
                    @if (Model.LockoutEnd > DateTimeOffset.UtcNow)
                    {
                        <form asp-action="UnlockUser" method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-success w-100">Unlock</button>
                        </form>
                    }

                    else

                    {
                        <form asp-action="LockUser" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger w-100">Lock</button>
                        </form>
                    }
                </div>
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Back to Index</a>
                </div>
            </div>
        </div>
    </div>
</div>
