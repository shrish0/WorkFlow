@model Category
<div class="row justify-content-center">
    <div class="card shadow mt-4 border-0 px-0 col-sm-11 col-8 col-lg-8">
        <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="text-center col-12">
                    <h2 class="text-white py-2">Edit Category</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post">
                @Html.AntiForgeryToken() <!-- CSRF protection token -->
                <div class="mt-4 border p-3">
                    <input asp-for="CategoryId" hidden />
                    <div class="py-2 col-12">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" disabled />
                    </div>
                    <div class="py-2 col-12">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <h5>Related SubCategories</h5>
                    @if (Model.SubCategories.Any())

                    {
                        <ul class="d-flex flex-wrap">
                            @foreach (var subCategory in Model.SubCategories)

                            {
                                <li class="flex-fill p-2" style="min-width: 45%;">
                                    <strong>Sub Category:</strong> @subCategory.Code <br />
                                    <strong>Description:</strong> @subCategory.Description
                                </li>
                            }
                        </ul>
                    }

                    else

                    {
                        <p>No related subcategories.</p>
                    }

                    <div class="row mt-3">
                        <div class="col-6 col-md-6">
                            <button type="submit" class="btn btn-primary form-control">Save</button>
                        </div>
                        <div class="col-6 col-md-6">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to Categories</a>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="row mt-2"></div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
